<Window x:Class="petsImproved.OrdersForms"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:petsImproved"
        mc:Ignorable="d"
        Title="OrdersForms" Height="450" Width="800">
    <Grid>
        <ScrollViewer>
            <StackPanel>
                <Label>Information about future owner</Label>
                <Label>Surname</Label>
                <TextBox Grid.Row="1" Name="Name" Margin="5" TextCompositionManager.PreviewTextInput="Name_PreviewTextInput"/>
                <Label>Phone</Label>
                <TextBox Grid.Row="2" Name="Phone" Margin="5" TextCompositionManager.PreviewTextInput="Phone_PreviewTextInput"/>
                <Button Grid.Row="6" Content="Add Order" Margin="5" Click="AddOrder"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
